<div class="row">
	<div class="col-md-8">
			<%= form_for [:admin, @controller], as: :c do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, required: true, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :avatar %>
			<%= f.file_field :avatar, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.button class: 'form-control btn btn-primary' %>
		</div>
		<% end %>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
  		<div class="panel-heading">Controller</div>
  		<div class="panel-body">
  			<p>Aspects of a Controller</p>
  			<ul>
  				<li><strong>Name</strong> - The name of the controller *</li>
  				<li><strong>Avatar</strong> - The icon that appears next the controller across the site</li>
  			</ul>
  			<p><small><em>* required field</em></small></p>
  		</div>
		</div>
	</div>
</div>
